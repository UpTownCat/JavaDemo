<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>jndiServlet</servlet-name>
    <servlet-class>com.example.servlet.JndiServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>jndiServlet</servlet-name>
    <url-pattern>/getUserInfo</url-pattern>
  </servlet-mapping>

  <resource-env-ref>
    <resource-env-ref-name>user</resource-env-ref-name>
    <resource-env-ref-type>com.example.bean.User</resource-env-ref-type>
  </resource-env-ref>

</web-app>
